<style>
  .animalsPage {
    width: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  table {
    flex: 1;
    width: 80%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 18px;
    text-align: left;
    border: 1px solid #000000;
  }

  th, td {
    padding: 10px;
    border: 1px solid #ddd;
  }

  th {
    color: #c2bcbc;
    font-weight: bold;
  }

  tr:hover {
    background-color: #2f2f2f;
  }
</style>
<div class="animalsPage">
  <a href="animals/add">Add new animal</a>
  <% if (animals && animals.length > 0) { %>
    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Species</th>
        <th>Added by User</th>
        <th>User Role</th>
      </tr>      
      <% animals.forEach((a) => { %>
        <tr>
          <td><%= a.id %></td>
          <td><%= a.name %></td>
          <td><%= a.Species.name %></td>
          <td><%= a.User.firstName %></td>
          <td><%= a.User.role %></td>
        </tr>
        <% }) %>
    </table>
  <% } else { %>
    <h1>Theres no animals here ðŸ˜­</h1>
  <% } %>
</div>
